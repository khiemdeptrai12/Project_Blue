@{
}
@model Project_Blue.Models.BaiPost
<div style="margin: 0 auto; display:block; width:100%; padding: 100px 0">
    <div style="margin:0 auto" class="container__center-user-post-main">
    <form asp-action="BaiPost" class="form__center-user-post"
          enctype="multipart/form-data">
            <span class="form__center-title">Tạo bài viết</span>
                <input asp-for="MaNguoiPost"
                       type="hidden"
                       value="@ViewBag.idUser" />
            <div class="form__user-post">
                <input asp-for="Caption"
                       class="form__user-post-input"
                       type="text"
                       placeholder="Caption" />
            </div>
            <div class="form__user-post">
                <input asp-for="MoTa"
                       class="form__user-post-input"
                       type="text"
                       placeholder="Decriptions" />
            </div>
            <div class="form__user-post">
                <input type="file"
                       asp-for="AnhBaiPost"
                       class="form__user-post-img"/>
            </div>
            <div class="form__user-post">
                <button type="submit" class="submit-post">Đăng</button>
            </div>
    </form>
</div>

</div>